{% extends 'Survey/controlls.html.twig' %}

{% block body %}
    <br>
    <form action="bearbeiten/confirm" method="post">


        <label>Umfragebezeichnung: </label>
        <input type="text" name="surveyname" value="{{ allresults.surveyname }}" size="30"><br><br>


        {% for Questions in allresults.questions %}
            <br>Frage:
            <input type="text" name="question{{ Questions.questionId }}" value="{{ Questions.question }}" size="30"><br>
            {% block answers %}
                <table>
                    {% for row in Questions.answers %}
                        <tr>
                            <td></td>
                            <td><input type="text" name="{{ row.answerId }}" value="{{ row.answer }}" size="30"></td>
                        </tr>
                    {% endfor %}
                </table>
            {% endblock %}
            <button type="submit" formaction="bearbeiten/antwort_hinzufuegen/{{ Questions.questionId }}">Antwort hinzufügen</button><br><br>
        {% endfor %}
        <button type="submit" formaction="bearbeiten/neue_frage/">Frage hinzufügen</button><br><br>
        {% block button %}
            <button type="submit">Absenden</button>
        {% endblock %}
    </form>
    <br>

{% endblock%}